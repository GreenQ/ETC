<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false" >

    <alpha
        android:duration="500"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" >
    </alpha>

    <rotate
        android:fromDegrees="120"
        android:toDegrees="0"
        android:duration="500"
        android:pivotX="50%"
        android:pivotY="50%">
    </rotate>

</set>