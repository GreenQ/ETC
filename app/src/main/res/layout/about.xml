<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff43aa67">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обращение к пользователям"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView

        android:layout_below="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#00FFFFFF"
        android:textColor="#FFFFFF"
        android:autoLink="email"
        android:textColorLink="#ff0010b6"
        android:text="      Команда разработчиков DailyAppsLab благодарит вас за установку игры. С любыми пожеланиями или предложениями вы можете обратиться к нам по электронному адресу dailyappslab@gmail.com \n     Если вам понравилась игра - пожалуйста, поддержите нас отзывами и оценками! \n    Желаем удачи и приятного времяпровождения!"
        android:textStyle="italic"/>

</RelativeLayout>