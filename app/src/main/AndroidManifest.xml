<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dailyappslab.etc" >

    <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <supports-screens>
        android:smallScreen=["true"]
        android:normalScreen=["true"]
        android:largeScreen=["true"]
        android:anyDensity=["true"]

    </supports-screens>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoadActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.dailyappslab.etc.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.dailyappslab.etc.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.dailyappslab.etc.HighscoresActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.dailyappslab.etc.AboutUsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".ResultActivity"
            android:theme="@style/AppThemeDialog"></activity>

    </application>

</manifest>
